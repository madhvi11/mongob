<form method="post" action="/updatestudent" enctype="multipart/form-data">
    <input type="text" value="<%= oldStudent.id %>" name="EditId">
    <table border="1">
        <tr>
            <td>Name :</td>
            <td><input type="text" value="<%= oldStudent.name %>" name="name"></td>
        </tr>

        <tr>
            <td>Age :</td>
            <td><input type="text" value="<%= oldStudent.age %>" name="age"></td>
        </tr>
       
        <tr>
            <td>Select Gender:</td>
            <td><input type="radio" name="gender" value="male" <% if(oldStudent.gender == 'male') { %> <%= 'checked' %> <% } %> >male
                <input type="radio" name="gender" value="female" <% if(oldStudent.gender == 'female') { %> <%= 'checked' %> <% } %> >female
            </td>
        </tr>

        <tr>
            <td>Select Hobby :</td>
            <td>
                <input type="checkbox" name="hobby" value="Reading" <% if(oldStudent.hobby.includes('Reading')) {%> <%= 'checked' %><% } %>>Reading
                <input type="checkbox" name="hobby" value="Music" <% if(oldStudent.hobby.includes('Music')) {%> <%= 'checked' %><% } %> >Music
                <input type="checkbox" name="hobby" value="Adventure" <% if(oldStudent.hobby.includes('Adventure')) {%> <%= 'checked' %><% } %> >Adventure
            </td>
        </tr>

        <% var citydata = ["surat","ahmedabad","rajkot" ,"navsari"] %>
            <tr>
                <td>Select City</td>
                <td>
                    <select name="city">
                        <option value="">--select city--</option>
                        <% citydata.map((v)=>{%>
                            <option value="<%= v %>" <% if(oldStudent.city==v){%><%= 'selected' %><% } %>><%= v %></option>
                        <% }) %>
                    </select>
                </td>
            </tr>

            <tr>
                <td>Message :</td>
                <td><textarea name="message"><%= oldStudent.message %></textarea></td>
            </tr>

            <tr>
                <td>Upload Image :</td>
                <td>
                    <input type="file" name="adminImage">
                    <img src="<%= oldStudent.adminImage %>"  height="100px">
                </td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" name="submit" value="Edit student"></td>
            </tr>
    </table>
</form>